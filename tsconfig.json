{
  "ts-node": {
    "require": [ "tsconfig-paths/register" ]
  },
  "include": [ "src/**/*" ],
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": [ "ES6" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@database/*": [ "src/application/database/*" ],
      "@pkg/*": [ "src/application/pkg/*" ],
      "@application/*": [ "src/application/*" ],
      "@controller/*": [ "src/controller/*" ],
      "@helper/*": [ "src/helper/*" ],
      "@mapping/*": [ "src/mapping/*" ],
      "@middleware/*": [ "src/middleware/*" ],
      "@route/*": [ "src/route/*" ],
      "@service/*": [ "src/service/*" ],
      "@type/*": [ "src/type/*" ],
      "@validation/*": [ "src/validation/*" ],
    },
    "typeRoots": [ "src/type", "./node_modules/@types" ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
