{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ES6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/app/modules/*"],
      "@databases/*": ["src/app/databases/*"],
      "@middleware/*": ["src/app/middleware/*"],
      "@helpers/*": ["src/helpers/*"],
      "@type/*": ["src/types/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  }
}
